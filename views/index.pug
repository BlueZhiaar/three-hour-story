extends layout

block content
  h1= title
  p Welcome to #{title}
  div 
    if user 
      div
        a(href="/logout") #{user.username} をログアウト
      - var hasCharacter = characters.length > 0
      if hasCharacter 
        h3 あなたのキャラクター
        a(href=`/characters/${characterdatas.character_id}`) #{characterdatas.character_name} #{characterdatas.updatedAt}
    else 
      div 
        a(href="/login") ログイン